{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "Models",
    "type": "object",
    "properties": {
        "parts": {
            "title": "Parts",
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": {
                    "$ref": "#/definitions/Part"
                }
            }
        }
    },
    "required": [
        "parts"
    ],
    "definitions": {
        "Sketch": {
            "title": "Sketch",
            "type": "object",
            "properties": {
                "type": {
                    "title": "Type",
                    "enum": [
                        "rect"
                    ],
                    "type": "string"
                },
                "p1": {
                    "title": "P1",
                    "minItems": 2,
                    "maxItems": 2,
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "type": "integer"
                            },
                            {
                                "type": "number"
                            }
                        ]
                    }
                },
                "p2": {
                    "title": "P2",
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": [
                "type",
                "p1",
                "p2"
            ]
        },
        "Part": {
            "title": "Part",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Name",
                    "type": "string"
                },
                "type": {
                    "title": "Type",
                    "enum": [
                        "extrusion"
                    ],
                    "type": "string"
                },
                "shape": {
                    "title": "Shape",
                    "enum": [
                        "solid"
                    ],
                    "type": "string"
                },
                "sketch": {
                    "$ref": "#/definitions/Sketch"
                }
            },
            "required": [
                "name",
                "type",
                "shape"
            ]
        }
    }
}