{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "GamaGsConfig",
  "properties": {
    "mode": {
      "allOf": [
        {
          "$ref": "#/$defs/Mode"
        }
      ],
      "default": "none"
    },
    "network": {
      "allOf": [
        {
          "$ref": "#/$defs/Network"
        }
      ],
      "default": "shared"
    },
    "prod": {
      "type": "boolean",
      "default": false
    },
    "log_level": {
      "allOf": [
        {
          "$ref": "#/$defs/LogLevel"
        }
      ],
      "default": "info"
    },
    "remote_cmd_override": {
      "type": "boolean",
      "default": false
    }
  },
  "$defs": {
    "Mode": {
      "title": "Mode",
      "enum": [
        "none",
        "xbox",
        "thrustmaster",
        "thrustmaster_combo",
        "warthog",
        "warthog_combo"
      ]
    },
    "Network": {
      "title": "Network",
      "enum": [
        "shared",
        "vpn",
        "host"
      ]
    },
    "LogLevel": {
      "title": "LogLevel",
      "enum": [
        "info",
        "debug"
      ]
    }
  }
}