---
interface Props {
    items: {
        name: string;
        value: string;
    }[];
}

const { items } = Astro.props;
---

<div class="flex px-16 items-center justify-around text-sm">
    {
        items.map((item) => (
            <div class="flex flex-col items-center">
                <p class="uppercase tracking-tighter text-gray-400">
                    {item.name}
                </p>
                <p class="font-bold">{item.value}</p>
            </div>
        ))
    }
</div>
